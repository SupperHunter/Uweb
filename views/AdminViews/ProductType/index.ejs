<h1>Tất cả loại sản phẩm</h1>
<a href="/admin/ProductTypeNew" class="btn btn-primary mb-3">Thêm mới</a>

<table class="table table-bordered table-striped">
  <thead>
    <tr>
      <th>Tên</th>
      <th>Mô tả</th>
      <th>Hành động</th>
    </tr>
  </thead>
  <tbody>
    <% categories.forEach(category=> { %>
      <tr>
        <td>
          <%= category.name %>
        </td>
        <td><%- category.Description %></td>
        <td>
          <a href="/admin/ProductTypeedit/<%= category.id %>" class="btn btn-warning">Chỉnh sửa</a>
          <button class="btn btn-danger" data-bs-toggle="modal"
            data-bs-target="#deleteModal<%= category.id %>">Xóa</button>

          <!-- Hộp thoại xác nhận xóa -->
          <div class="modal fade" id="deleteModal<%= category.id %>" tabindex="-1" aria-labelledby="deleteModalLabel"
            aria-hidden="true">
            <div class="modal-dialog">
              <div class="modal-content">
                <div class="modal-header">
                  <h5 class="modal-title" id="deleteModalLabel">Xóa loại sản phẩm</h5>
                  <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Đóng"></button>
                </div>
                <div class="modal-body">
                  Bạn có chắc chắn muốn xóa loại sản phẩm "<%= category.name %>" không?
                </div>
                <div class="modal-footer">
                  <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Hủy</button>
                  <form action="/admin/ProductType/delete/<%= category.id %>" method="POST" class="d-inline">
                    <button type="submit" class="btn btn-danger">Có, Xóa</button>
                  </form>
                </div>
              </div>
            </div>
          </div>
        </td>
      </tr>
      <% }) %>
  </tbody>
</table>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>